__lua__
-- hold signifiers
--
-- todo make a sound while the
-- button is held, and stop
-- immediately on release

button = false
function _draw()
 cls()
 if btn(❎) and not button then
  sfx(0)
  button = true
 end
 if not btn(❎) and button then
  sfx(1)
  button = false
 end
 if button then
  pset(64,64,7)
 else
  pset(64,64,8)
 end
end
